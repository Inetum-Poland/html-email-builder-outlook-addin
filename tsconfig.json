{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "lib-amd"
  ],
  "ts-node": {
    "files": true
  }
}
